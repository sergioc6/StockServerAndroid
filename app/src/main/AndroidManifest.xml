<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="sergioc6.stockserverandroid">


    <application
        android:allowBackup="true"
        android:icon="@mipmap/stockserver_logo"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".Login">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:label="@string/app_name" android:name=".Principal"/>
        <activity android:label="@string/app_name" android:name=".Compras"/>
        <activity android:label="@string/app_name" android:name=".RegistrarInsumo"/>
        <activity android:label="@string/app_name" android:name=".ConfirmarCompraSuccess"/>
        <activity android:label="@string/app_name" android:name=".Proveedores"/>
        <activity android:label="@string/app_name" android:name=".ConsultarStock"/>
        <activity android:label="@string/app_name" android:name=".ConsultarStockSuccess"/>


    </application>

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.CAMERA2" />
    <uses-permission android:name="android.permission.CAMERA.AUTOFOCUS" />

</manifest>