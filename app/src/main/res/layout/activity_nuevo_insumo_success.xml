<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:text="Registrar nuevo insumo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textViewRegistrarInsumo"
        android:textStyle="normal|bold"
        android:textAlignment="center"
        android:textSize="24sp"
        android:textColor="@android:color/background_dark"
        android:layout_marginTop="10dip"
        android:layout_marginBottom="10dp"/>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="1dip"
        android:background="#000000">
    </LinearLayout>

    <TextView
        android:text="¡Nuevo insumo registrado con éxito!"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView8"
        android:textSize="22sp"
        android:textColor="@android:color/holo_green_dark"
        android:textAlignment="center" />

    <TextView
        android:text="TextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textViewNuevoInsumo"
        android:textSize="24sp"
        android:textColor="@android:color/background_dark" />

    <Button
        android:text="Registrar otro insumo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/buttonRegistrarOtroInsumo"
        android:layout_marginTop="10dip"
        android:onClick="registrarOtroInsumoClick"
        android:textColor="@color/colorPrimary"/>

    <Button
        android:text="Volver"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/buttonVolver"
        android:onClick="volverClick"
        android:textColor="@color/colorPrimary"/>


</LinearLayout>