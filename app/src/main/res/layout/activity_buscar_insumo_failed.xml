<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:text="Buscar insumo en depósito"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textViewDatos"
        android:textSize="24sp"
        android:textStyle="normal|bold"
        android:textAlignment="center"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:textColor="@android:color/background_dark" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="1dip"
        android:background="#000000">

    </LinearLayout>

    <TextView
        android:text="No se encontró un insumo para el código QR escaneado."
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textViewBuscarInsumoFailed"
        android:textSize="24sp"
        android:textAlignment="center"
        android:textColor="@android:color/holo_red_dark" />

    <Button
        android:text="Buscar otro insumo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/buttonBuscarOtroInsumo"
        android:onClick="buscarOtroInsumoClick"
        android:textColor="@color/colorPrimary"
        />

    <Button
        android:text="Volver"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/buttonVolver"
        android:onClick="volverPrincipalClick"
        android:textColor="@color/colorPrimary"
        />

</LinearLayout>